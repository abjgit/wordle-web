{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules/@vercel/node"
    ]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
