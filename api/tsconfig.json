{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": "..",
    "rootDir": "..",
    "outDir": "./dist",
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules/@vercel/node"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/config.ts"
  ],
  "exclude": ["node_modules"]
}
