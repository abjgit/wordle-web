{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "..",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
