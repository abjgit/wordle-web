{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "..",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.js",
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
